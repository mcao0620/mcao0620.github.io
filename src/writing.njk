<h1 class="text-xl font-bold text-bambooContrast dark:text-bambooFg mb-6">Writing</h1>

<div class="flex flex-col gap-6">
{% for post in collections.posts | reverse %}
  <div class="flex flex-col gap-1 items-start">
    <a href="{{ post.url }}" class="text-lg font-medium text-bambooContrast dark:text-bambooFg underline decoration-transparent hover:decoration-bambooGreen underline-offset-4 transition-all duration-200">
      {{ post.data.title }}
    </a>
    <time class="text-sm text-bambooMuted" datetime="{{ post.date.toISOString() }}">
      {{ post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}
    </time>
  </div>
{% endfor %}
</div>
